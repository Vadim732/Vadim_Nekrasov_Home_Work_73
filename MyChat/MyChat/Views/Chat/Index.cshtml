@model IEnumerable<MyChat.Models.Message>

@{
    ViewBag.Title = "Main page - Chat";
}

<div class="mt-4">
    <div class="row">
        <div class="bg-dark text-white pt-2 pb-2 text-center">
            <h3>Добро пожаловать в чат</h3>
        </div>
        <div class="col-12 border rounded chat">
            <div class="p-2">
                @foreach (var m in Model)
                {
                    <div class="mt-2">
                        <span class="text-muted small">@m.DateOfDispatch</span>
                        <strong>@m.User.UserName</strong>
                        <div>@m.Inscription</div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="row bg-dark pt-3 pb-3">
        <form asp-action="Index" asp-controller="Chat" asp-anti-forgery="true">
            <div asp-validation-summary="ModelOnly" class="text-error"></div>
            <div class="col-10">
                <input type="text" asp-for="Inscription" class="form-control" placeholder="Введите сообщение...">
                <span asp-validation-for="Inscription" class="text-error"/>
            </div>
            <div class="col-2">
                <button type="submit" class="btn btn-outline-light w-100">Отправить</button>
            </div>
        </form>
    </div>
</div>